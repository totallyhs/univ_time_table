<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chs_bulletinboard">
	<select id="boardList" resultType="org.timetable.univ.model.vo.BoardVo">
		select * from board
	</select>
	
	<select id="selectpost" parameterType="java.lang.Integer" resultType="org.timetable.univ.model.vo.PostVo">
		select * from post where no = #{no}
	</select>
	
	<insert id="insertpost" parameterType="org.timetable.univ.model.vo.PostVo">
		insert into post values(#{no},#{boardNo},#{subject},#{writer},#{content},1,sysdate,0,#{published})
	</insert>
	
	<select id="selectboardpost" parameterType="java.lang.Integer" resultType="org.timetable.univ.model.vo.PostVo">
		select * from post where boardno = #{boardno} order by no desc
	</select>
</mapper>